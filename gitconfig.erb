[alias]
    co = checkout
    lt = describe --tags --abbrev=0

[core]
    excludesfile = <%= ENV['HOME'] %>/.gitglobalexclude
    editor = vim
    autocrlf = input

[commit]
    gpgsign = true

[push]
   default = simple

[apply]
    whitespace = nowarn

[format]
    pretty = %C(yellow)%h%Creset %s %C(red)(%an, %cr)%Creset

[color]
    branch = auto
    diff = auto
    status = auto

[color "branch"]
    current = yellow
    local = blue
    remote = green
  
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold

[color "status"]
    added = yellow
    changed = green
    untracked = cyan

[gui]
    fontui = -family Hack -size 9 -weight normal -slant roman -underline 0 -overstrike 0 
    fontdiff = -family Hack -size 9 -weight normal -slant roman -underline 0 -overstrike 0

